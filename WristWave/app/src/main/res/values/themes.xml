<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="Theme.WristWave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- 自定义属性 -->
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <!-- 深色主题 -->
    <style name="Theme.WristWave.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryVariant">@color/primary_dark_theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_dark_theme</item>
        <item name="colorSecondaryVariant">@color/accent_dark_theme_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 对话框主题 -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:background">@color/background</item>
    </style>
</resources>